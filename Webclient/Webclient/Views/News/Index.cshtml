@model PagedList.IPagedList<Webclient.Models.News>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<h2>List Articles</h2>


<table class="table table-striped table-bordered">
    <tr>
        <th>
            Title
        </th>
        <th>
           Thumbail
        </th>
        <th>
            Content
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width:300px">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @if (item.Thumb.Length != 0)
                {
                    <img src="@Html.DisplayFor(modelItem => item.Thumb)" style="width:150px;height:100px" />
                }
            </td>
            <td>
                <p>@Html.DisplayFor(modelItem => item.Description)</p>

            </td>
            <td>
                <a href="@Url.Action("Details", "News")/@item.Id"><i class='fas fa-eye'></i></a>
            </td>
        </tr>
    }

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
<style>
    p {
        width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 20px;
        -webkit-line-clamp: 3;
        display: -webkit-box;
        -webkit-box-orient: vertical;
    }

    img {
        width: 500px;
    }
</style>
